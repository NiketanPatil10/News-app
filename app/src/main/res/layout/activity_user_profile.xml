<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7FBDF"
    tools:context=".UserProfileActivity">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="#FFECD072">


      <ImageView
          android:id="@+id/imageview_profile"
          android:layout_width="170dp"
          android:layout_height="170dp"
          android:layout_marginTop="120dp"
          android:layout_marginBottom="10dp"
          android:layout_centerHorizontal="true"
          android:background="@drawable/no_profile_pic"
          />


      <ProgressBar
          android:id="@+id/progressbar"
          style="?android:attr/progressBarStyle"
          android:layout_width="38dp"
          android:layout_height="38dp"
          android:layout_below="@+id/TextViewWelcome"
          android:layout_alignParentEnd="true"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="2dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="188dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.501"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintVertical_bias="0.923" />

      <TextView
          android:id="@+id/TextViewWelcome"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/imageview_profile"
          android:hint="Loading...."
          android:textSize="20dp"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="2dp"
          android:textAppearance="@style/TextAppearance.AppCompat.Headline"
          android:textColor="#FFFFFF"/>

    </RelativeLayout>
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@color/white">


      <ImageView
          android:id="@+id/User_Profile_img"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:background="@drawable/ic_profile"
          />

      <TextView
          android:id="@+id/User_full_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignStart="@+id/User_Profile_img"
          android:layout_marginStart="50dp"
          android:layout_marginLeft="50dp"
          android:hint="Loading"
          android:textSize="18sp" />

      <View
          android:id="@+id/divider_name"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="20dp"
          android:layout_below="@+id/User_full_name"
          android:background="#E8A277"/>


      <ImageView
          android:id="@+id/User_Email_img"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/ic_email"
          android:layout_below="@+id/divider_name"
          />

      <TextView
          android:id="@+id/User_Email"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignStart="@+id/User_Email_img"
          android:layout_marginStart="50dp"
          android:layout_marginTop="20dp"
          android:layout_below="@id/divider_name"
          android:layout_marginLeft="50dp"
          android:hint="Loading"
          android:textSize="18sp" />

      <View
          android:id="@+id/divider_email"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="20dp"
          android:layout_below="@+id/User_Email"
          android:background="#E8A277"/>


      <ImageView
          android:id="@+id/User_birthday_img"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/ic_birthday"
          android:layout_below="@+id/divider_email"
          />

      <TextView
          android:id="@+id/User_Birthday"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignStart="@+id/User_Email_img"
          android:layout_marginStart="50dp"
          android:layout_marginTop="20dp"
          android:layout_below="@+id/divider_email"
          android:layout_marginLeft="50dp"
          android:hint="Loading"
          android:textSize="18sp" />

      <View
          android:id="@+id/divider_birthday"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="20dp"
          android:layout_below="@+id/User_Birthday"
          android:background="#E8A277"/>


      <ImageView
          android:id="@+id/User_gender_img"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/ic_gender"
          android:layout_below="@+id/divider_birthday"
          />


      <TextView
          android:id="@+id/User_Gender"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignStart="@+id/User_Email_img"
          android:layout_marginStart="50dp"
          android:layout_marginTop="20dp"
          android:layout_below="@+id/divider_birthday"
          android:layout_marginLeft="50dp"
          android:hint="Loading"
          android:textSize="18sp" />


      <View
          android:id="@+id/divider_gender"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="20dp"
          android:layout_below="@+id/User_Gender"
          android:background="#E8A277"/>


      <ImageView
          android:id="@+id/User_mobile_img"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/ic_mobile"
          android:layout_below="@+id/divider_gender"
          />


      <TextView
          android:id="@+id/User_mobile_no"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignStart="@+id/User_Email_img"
          android:layout_marginStart="50dp"
          android:layout_marginTop="20dp"
          android:layout_below="@+id/divider_gender"
          android:layout_marginLeft="50dp"
          android:hint="Loading"
          android:textSize="18sp" />

    </RelativeLayout>





  </LinearLayout>
      

  </ScrollView>